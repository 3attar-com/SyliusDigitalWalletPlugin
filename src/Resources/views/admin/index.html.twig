{% extends '@SyliusAdmin/layout.html.twig' %}

{% import '@SyliusUi/Macro/messages.html.twig' as messages %}
{% import "@SyliusShop/Common/Macro/money.html.twig" as money %}

{% block content %}
    <div class="ui stackable two column grid">
        <div class="column">
            <h1 class="ui header">
                <i class="circular money icon"></i>
                <div class="content">
                    {{ 'eres_digital_wallet.admin.ui.credit'|trans }}
                    <div class="sub header"></div>
                </div>
            </h1>
            <div class="ui breadcrumb">
                <a href="{{ path('sylius_admin_dashboard') }}" class="section">Administration</a>
                <i class="right chevron icon divider"></i>
                <a href="{{ path('sylius_admin_customer_index') }}" class="section">Customers</a>
                <i class="right chevron icon divider"></i>
                <a href="{{ path('sylius_admin_customer_show', { 'id': customer.id }) }}"
                   class="section">{{ customer.email }}</a>
                <i class="right chevron icon divider"></i>
                <div class="active section">{{ 'eres_digital_wallet.admin.menu.credits'|trans }}</div>
            </div>
        </div>
        <div class="middle aligned column">
            <div class="ui right floated buttons">
                <a class="ui labeled icon button  primary "
                   href="{{ path('eres_digital_wallet_credit_new', {'customerId': customer.id}) }}">
                    <i class="icon plus"></i>
                    Create
                </a>
            </div>
        </div>
    </div>

    {% if credits|length > 0 %}
        <div class="ui segment spaceless sylius-grid-table-wrapper">
            <table class="ui sortable stackable very basic celled table">
                <thead>
                <tr>
                    <th>{{ 'eres_digital_wallet.admin.ui.amount'|trans }}</th>
                    <th>{{ 'eres_digital_wallet.admin.ui.currency_code'|trans }}</th>
                    <th>{{ 'eres_digital_wallet.admin.ui.action'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for credit in credits %}
                    <tr>
                        <td>{{ money.format(credit.amount, credit.currencyCode) }}</td>
                        <td>{{ credit.currencyCode }}</td>
                        <td>{{ credit.action }}</td>
                    </tr>
                {% endfor %}
                <tr>
                    <td>
                        {{ 'eres_digital_wallet.admin.ui.total'|trans }}
                    </td>
                    <td colspan="2">
                        <b>{{ money.format(eres_digital_wallet.balance(customer), sylius.currencyCode) }}</b>
                    </td>
                </tr>

                </tbody>
            </table>
        </div>
    {% else %}
        {{ messages.info('sylius.ui.no_results_to_display') }}
    {% endif %}

{% endblock %}
